

{% if breadcrumb %}
<!-- Header Section -->
<section class="page-section bg-dark-1 bg-dark-alpha-80 light-content parallax-5" style="background-image: url(images/full-width-images/section-bg-7.jpg)">

  <div class="container position-relative pt-50">
            
        <!-- Section Content -->
        <div class="text-center">
            <div class="row">
                
                <!-- Page Title -->
                <div class="col-md-8 offset-md-2">
                    
                    <h2 class="section-caption-border mb-30 mb-xs-20 wow fadeInUp" data-wow-duration="1.2s">
                        We are design studio
                    </h2>
                    
                    <h1 class="hs-title-1 mb-40">
                        <span class="wow charsAnimIn" data-splitting="chars">Creating beautiful virtual experiences and products.</span>
                    </h1>
                    
                    <!-- Feature List -->
                    <div class="mt-n10 wow fadeInUp" data-wow-delay="0.6s" data-wow-duration="1.2s">
                        
                      {% set i = 0 %}  
                      {% for item in breadcrumb %}
                      {% set i = i + 1 %}
                      <div class="d-inline-flex mt-10 mx-3">
                                       {% if i < breadcrumb|length - 1 %}
                          <div class="features-list-icon">
                                          <i class="mi-check"></i>
                                      </div>
                        {% endif %}  
                         {% if item.url %}
                        
                                      <div class="features-list-text">
                                         <a href="{{ item.url }}">{{ item.text }}</a>
                                      </div>
                        {% else %}
                         <div class="features-list-text">
                                          {{ item.text }}
                                      </div>
                          
                        {% endif %}
                                  </div>
                      {% endfor %}
                        
                       
                    
                    </div>
                   
               
               </div>
               
                
            </div>                            
        </div>
      
        
    </div>
</section>

{% endif %}