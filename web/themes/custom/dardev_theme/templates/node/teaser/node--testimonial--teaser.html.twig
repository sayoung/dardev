    <div class="item ">
        
            <div class="testimonial">
                <p>{{content.body}}</p>
            </div>
            <div class="media">
                {% if content.field_testimonial_image is not empty %}
                {% set image_file = content.field_testimonial_image['#items'].entity.uri.value %}
                <div class="media-left d-flex mr-3">
                    <img src="{{ file_url(image_file) }}" alt="{{ label }}">										
                </div>
                {% endif %}
                <div class="media-body">
                    <div class="overview">
                        <div class="name"><b>{{content.field_testimonial_name}}</b></div>
                        <div class="details">{{content.field_testimonial_job}}</div>
                    </div>										
                </div>
            </div>
       
    </div>